  <image filename="titlebar-mid-title-focus-dx.png" x="((title_width)+80)" y="0" width="10" height="28"/>
  <image filename="titlebar-right-focused.png" x="width - object_width" y="0" width="object_width" height="height"/>
</draw_ops>


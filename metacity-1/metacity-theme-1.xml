<constant name="IconTitleSpacing" value="0"/>

<frame_geometry name="normal"  rounded_top_left="true" rounded_top_right="true" rounded_bottom_left="false" rounded_bottom_right="false" title_scale="medium">
  <distance name="left_width" value="5"/>
  <distance name="right_width" value="5"/>
  <distance name="bottom_height" value="5"/>
  <distance name="left_titlebar_edge" value="15"/>
  <distance name="right_titlebar_edge" value="7"/>
  <distance name="button_width" value="27"/>
  <distance name="button_height" value="28"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="0" right="2" top="0" bottom="0"/>
</frame_geometry>

<frame_geometry name="maximized"   rounded_top_left="true" rounded_top_right="true" rounded_bottom_left="false" rounded_bottom_right="false" title_scale="medium">
  <distance name="left_width" value="5"/>
  <distance name="right_width" value="5"/>
  <distance name="bottom_height" value="5"/>
  <distance name="left_titlebar_edge" value="15"/>
  <distance name="right_titlebar_edge" value="7"/>
  <distance name="button_width" value="27"/>
  <distance name="button_height" value="28"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="0" right="2" top="0" bottom="0"/>
</frame_geometry>

<frame_geometry name="border" parent="normal" has_title="false">
  <distance name="button_width" value="27"/>
  <distance name="button_height" value="28"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="0" right="2" top="0" bottom="0"/>
</frame_geometry>

<frame_geometry name="border-maximized" parent="maximized" has_title="false">
  <distance name="button_width" value="27"/>
  <distance name="button_height" value="28"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="0" right="2" top="0" bottom="0"/>
</frame_geometry>

<draw_ops name="title-text-focused">
